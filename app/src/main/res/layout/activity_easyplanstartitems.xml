<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".easyplanstartitems">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:id="@+id/easyplanstartitemtext1"/>

        <Button
            android:id="@+id/easyplanstartitembutton1"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:background="@drawable/button3"/>


    </LinearLayout>


    <ImageView
        android:id="@+id/easyplanstartitemimage1"
        android:layout_width="match_parent"
        android:layout_height="400dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:id="@+id/easyplanstartitemtext2"/>

    <TextView
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/easyplanstartitemtext3"/>


</LinearLayout>